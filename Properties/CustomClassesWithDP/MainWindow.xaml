<Window x:Class="CustomClassesWithDP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CustomClassesWithDP"
        mc:Ignorable="d"
        Title="MainWindow" Height="400" Width="525"  Initialized="OnInit">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <Label>Shirt Choice</Label>
        <ListBox Name="ShirtChoice" SelectionChanged="ChooseShirt" />
        <Label>Shirt Color</Label>
        <ListBox Name="ShirtColorChoice"  SelectionChanged="ChooseShirtColor" />
        <Label Name="ButtonChoiceLabel">Button Color</Label>
        <ListBox Name="ButtonChoice"  SelectionChanged="ChooseButtonColor" />
    </StackPanel>
</Window>
